<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.crescent.thesis.MainActivity"
    android:background="@drawable/menubg">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!-- The first child in the layout is for the main Activity UI-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:text="       Tourist\n   Attractions"
                        android:id="@+id/touristAtt"
                        android:background="@drawable/menu_main_btn_left"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:onClick="showSubMenu"
                        android:layout_marginTop="130dp"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:text="    Show Map"
                        android:id="@+id/credits"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="@drawable/menu_main_btn_left"
                        android:onClick="showSubMenu"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:text="      Quit"
                        android:id="@+id/quit"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:clickable="true"
                        android:textAlignment="gravity"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="@drawable/menu_main_btn_left"
                        android:onClick="showSubMenu" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:text="About       \nPampanga     "
                        android:id="@+id/aboutPampanga"
                        android:background="@drawable/menu_main_btn_right"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:onClick="showSubMenu"
                        android:layout_marginTop="180dp"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:text="Credits    "
                        android:id="@+id/map"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:clickable="true"
                        android:textAlignment="gravity"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/menu_main_btn_right"
                        android:onClick="showSubMenu"/>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>