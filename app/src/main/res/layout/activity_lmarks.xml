<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.crescent.thesis.lmarks"
    android:background="@drawable/menu_sub_bg">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!-- The first child in the layout is for the main Activity UI-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="2dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/archdiocesan_chancery" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Archdiocesan\nChancery"
                        android:id="@+id/cult1"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:onClick="showplaces"
                        android:textSize="11dp" />


                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/buluyut_bridge"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Buluyut Bridge"
                        android:id="@+id/cult2"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:onClick="showplaces"/>

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/crissot_monument"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Crissot Monument"
                        android:id="@+id/cult4"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:onClick="showplaces"/>

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/el_kabayo"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="El Kabayo"
                        android:id="@+id/cult5"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:onClick="showplaces"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="2dp">

                    <ImageView
                        android:id="@+id/image10"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/macario_arnedo_park"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Macario Arnedo Park"
                        android:id="@+id/cult10"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:onClick="showplaces"/>

                    <ImageView
                        android:id="@+id/image11"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bayanihan"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Salakot Arch"
                        android:id="@+id/cult11"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:onClick="showplaces"/>

                    <ImageView
                        android:id="@+id/image12"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/san_fernando_railway_station"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="San Fernando\nRailway Station"
                        android:id="@+id/cult12"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:onClick="showplaces"/>

                    <ImageView
                        android:id="@+id/image13"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/president_roxas_marker"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="President Roxas Marker"
                        android:id="@+id/cult13"
                        android:background="@drawable/menu_sub_btn"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:contextClickable="false"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:onClick="showplaces"/>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
